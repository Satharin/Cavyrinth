<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rafal.gra.QuestsActivity"
    android:background="#575757">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:onClick="back"
        android:id="@+id/exit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/startWarrior"
        android:onClick="startGoblinWarriorQuest"
        android:layout_marginTop="116dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/startFire"
        android:layout_alignStart="@+id/startFire" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start"
        android:id="@+id/startMage"
        android:onClick="startGoblinMageQuest"
        android:layout_above="@+id/startFire"
        android:layout_alignLeft="@+id/startWater"
        android:layout_alignStart="@+id/startWater" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start"
        android:id="@+id/startFire"
        android:onClick="startFireDragonQuest"
        android:layout_marginTop="88dp"
        android:layout_below="@+id/startWarrior"
        android:layout_toLeftOf="@+id/exit"
        android:layout_toStartOf="@+id/exit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start"
        android:id="@+id/startWater"
        android:onClick="startWaterDragonQuest"
        android:layout_alignTop="@+id/startFire"
        android:layout_toRightOf="@+id/exit"
        android:layout_toEndOf="@+id/exit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Goblin Warrior"
        android:id="@+id/textViewWarrior"
        android:layout_below="@+id/startWarrior"
        android:layout_alignLeft="@+id/startWarrior"
        android:layout_alignStart="@+id/startWarrior" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Goblin Mage"
        android:id="@+id/textViewMage"
        android:layout_below="@+id/startMage"
        android:layout_toRightOf="@+id/exit"
        android:layout_alignRight="@+id/startMage"
        android:layout_alignEnd="@+id/startMage"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fire Dragon"
        android:id="@+id/textViewFire"
        android:layout_below="@+id/startFire"
        android:layout_alignLeft="@+id/startFire"
        android:layout_alignStart="@+id/startFire"
        android:layout_alignRight="@+id/startFire"
        android:layout_alignEnd="@+id/startFire"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Water Dragon"
        android:id="@+id/textViewWater"
        android:layout_below="@+id/startWater"
        android:layout_toRightOf="@+id/exit"
        android:layout_alignRight="@+id/startWater"
        android:layout_alignEnd="@+id/startWater"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewStatus"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:background="#FFFFFF" />
</RelativeLayout>
